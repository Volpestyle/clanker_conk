{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "types": ["node", "bun-types"]
  },
  "include": ["src/**/*.ts", "vite.config.ts"],
  "exclude": [
    "node_modules",
    "dashboard/dist",
    "dist",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}
